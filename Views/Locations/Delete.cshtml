@model TTG3.Models.Location
@{
    ViewBag.Title = "Delete Location";
}
<h3 class="text-center">Delete Location</h3>
<hr />
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h6>Are you sure you want to delete this?</h6>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Room)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Room)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Semester_Number)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Semester_Number)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Subject_Type)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Subject_Type)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger btn-block" style="font-weight:bold" />
                    </div>
                }
            </div>
            <div class="card-footer text-right">
                @Html.ActionLink("Back to List", "Index", "Locations", new { @class = "btn", @style = "background-color:#31D67B;color:black;font-weight:bold;" })
            </div>
        </div>
    </div>
    <div class="col-4">
    </div>
