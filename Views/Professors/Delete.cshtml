@model TTG3.Models.Professor

@{
    ViewBag.Title = "Delete Professor";
}
<h3 class="text-center">Delete Professor</h3>
<hr />
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
         <div class="card shadow-lg">
             <div class="card-header text-center">
                 <h6>Are you sure you want to delete this?</h6>
             </div>
             <div class="card-body">
                 <dl class="dl-horizontal">
                     <dt>
                         @Html.DisplayNameFor(model => model.Professor_Name)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.Professor_Name)
                     </dd>

                     <dt>
                         @Html.DisplayNameFor(model => model.Email)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.Email)
                     </dd>

                     <dt>
                         @Html.DisplayNameFor(model => model.Contact)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.Contact)
                     </dd>

                     <dt>
                         @Html.DisplayNameFor(model => model.Gender)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.Gender)
                     </dd>

                     <dt>
                         @Html.DisplayNameFor(model => model.Age)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.Age)
                     </dd>

                     <dt>
                         @Html.DisplayNameFor(model => model.Visiting_Faculty)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.Visiting_Faculty)
                     </dd>

                     <dt>
                         @Html.DisplayNameFor(model => model.Start_Hour)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.Start_Hour)
                     </dd>

                     <dt>
                         @Html.DisplayNameFor(model => model.End_Hour)
                     </dt>

                     <dd>
                         @Html.DisplayFor(model => model.End_Hour)
                     </dd>
                 </dl>
                 @using (Html.BeginForm())
                 {
                     @Html.AntiForgeryToken()
                     <div class="form-actions no-color">
                         <input type="submit" value="Delete" class="btn btn-danger btn-block" style="font-weight:bold" />
                     </div>
                 }
                 @if (ViewBag.ErrMsg != null)
                 {
                     <p style="font-size:12px;color:red" class="text-right">@ViewBag.ErrMsg</p>
                 }
                 else if (ViewBag.dbexemsg != null)
                 {
                     <p style="font-size:12px;color:red" class="text-right">@ViewBag.dbexemsg</p>
                 }
             </div>
             <div class="card-footer text-right">
                 @Html.ActionLink("Back to List", "Index", "Professors", new { @class = "btn", @style = "background-color:#31D67B;color:black;font-weight:bold;" })
             </div>
         </div>  
    </div>
    <div class="col-4"></div>
</div>