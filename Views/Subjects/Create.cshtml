@model TTG3.Models.Subject

@{
    ViewBag.Title = "Add Subject";
}
<h3 class="text-center">Add New Subject</h3>
<hr />
<div class="row">
    <div class="col-2"></div>
    <div class="col-3">
        <div class="card shadow">
            <div class="card-header text-center">
                <h6 class="card-title">Instructions</h6>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <ul style="font-size:12px;" class="list-group">
                        <li class="list-group-item">Select Semester Number from Dropdown List as Required.</li>
                        <li class="list-group-item">Enter Subject Code, which should be Unique.</li>
                        <li class="list-group-item">Enter Respective Subject Name.</li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
    <div class="col-5">
        <div class="card shadow-lg">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <table style="margin:auto">
                        <tr class="text-center">
                            <td>
                                @Html.LabelFor(model => model.Semester_Number, htmlAttributes: new { @class = "control-label" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @*@Html.EditorFor(model => model.Semester_Number, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.DropDownListFor(model => model.Semester_Number, new List<SelectListItem>
                                   {
                                        new SelectListItem{Text="1",Value="1"},
                                        new SelectListItem{Text="2",Value="2"},
                                        new SelectListItem{Text="3",Value="3"},
                                        new SelectListItem{Text="4",Value="4"},
                                        new SelectListItem{Text="5",Value="5"}
                                   }, "Select Semester", htmlAttributes: new { @class = "form-control", @style = "color:black;width:300px" })
                            </td>
                        </tr>
                        <tr class="text-right">
                            <td>
                                @Html.ValidationMessageFor(model => model.Semester_Number, "", new { @class = "text-danger", @style = "font-size:14px" })
                            </td>
                        </tr>
                        <tr class="text-center">
                            <td>
                                @Html.LabelFor(model => model.Subject_Code, htmlAttributes: new { @class = "control-label" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.Subject_Code, new { htmlAttributes = new { @class = "form-control text-center", @style = "color:black;width:300px", placeholder="Subject Code" ,autocomplete="off"} })
                            </td>
                        </tr>
                        <tr class="text-right">
                            <td>
                                @Html.ValidationMessageFor(model => model.Subject_Code, "", new { @class = "text-danger", @style = "font-size:14px" })
                            </td>
                        </tr>
                        <tr class="text-center">
                            <td>
                                @Html.LabelFor(model => model.Subject_Name, htmlAttributes: new { @class = "control-label" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.Subject_Name, new { htmlAttributes = new { @class = "form-control text-center", @style = "color:black;width:300px", placeholder="Subject Name",autocomplete="off" } })
                            </td>
                        </tr>
                        <tr class="text-right">
                            <td>
                                @Html.ValidationMessageFor(model => model.Subject_Name, "", new { @class = "text-danger", @style = "font-size:14px" })
                            </td>
                        </tr>
                        <tr style="height:25px"><td></td></tr>
                        <tr>
                            <td>
                                <input type="submit" value="Submit" class="btn btn-block" style="background-color:#31D67B;color:black;font-weight:bold;" />
                            </td>
                        </tr>
                        @if(ViewBag.ErrMsg!=null)
                        {
                            <tr class="text-center text-danger">
                                <td>@ViewBag.ErrMsg</td>
                            </tr>
                        }
                    </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>